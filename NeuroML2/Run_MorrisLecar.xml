<Lems>


<!-- Specify which component to run -->
<DefaultRun component="sim1"/>

<!-- Include core NeuroML2 ComponentType definitions -->
<Include file="NeuroML2CoreTypes/Cells.xml"/>
<Include file="NeuroML2CoreTypes/Networks.xml"/>
<Include file="NeuroML2CoreTypes/Simulation.xml"/>


<!-- Include core NeuroML2 ComponentType definitions -->
<Include file="MorrisLecarCompType.nml"/>


<morrisLecarCell id="ml1" C="20" I="88" gL="2" gCa="4" gK="8" VL="-50" VCa="100" VK="-70" V1="0" V2="15" V3="10" V4="10" phi="10"/>


<network id="net1">
    <population id="ml1pop" component="ml1" size="1"/>
</network>

<!-- End of NeuroML2 content -->
        

<Simulation id="sim1" length="220s" step="0.05s" target="net1">

    <Display id="d1" title="Attempts to recreate Fig 6 from Morris and Lecar 1981" timeScale="1s">
        <Line id ="fn1" quantity="ml1pop[0]/V" scale="1"  color="#ee40FF" save="V.dat"/>
    </Display>
    <Display id="d2" title="M value" timeScale="1s">
        <Line id ="fn1" quantity="ml1pop[0]/Mss" scale="1"  color="#FFFFFF" save="Mss.dat"/>
    </Display>
    <Display id="d3" title="N & N steady state values" timeScale="1s">
        <Line id ="fn1" quantity="ml1pop[0]/N" scale="1"  color="#FFFFFF" save="N.dat"/>
        <Line id ="fn1" quantity="ml1pop[0]/Nss" scale="1"  color="#FF22FF" save="Nss.dat"/>
    </Display>
    
</Simulation>

</Lems>